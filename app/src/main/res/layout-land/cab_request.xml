<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Request"
        android:id="@+id/rqTitle"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:textSize="50dp"
        android:gravity="top|center"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="46dp">

    <EditText
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:id="@+id/startLocation"
        android:layout_below="@+id/StartPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:layout_alignRight="@+id/StartPoint"
        android:layout_alignEnd="@+id/StartPoint"
        android:enabled="true" />

        <ImageView
            android:layout_width="425dp"
            android:layout_height="53dp"
            android:src="@drawable/direction_arrow"
            android:id="@+id/imageView1"
           android:paddingRight="10dp"/>

    <EditText
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:id="@+id/endLocation"
        android:layout_alignBottom="@+id/startLocation"
        android:layout_gravity="right"
        android:paddingLeft="200dp"/>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="3dp">

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:id="@+id/stLocation"
        android:text="Start"
        android:textSize="30dp"
        android:layout_weight="1.10" />
    <TextView
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:id="@+id/enLocation"
        android:text="End"
        android:layout_weight="0.42"
        android:textSize="30dp"/>
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="Map"
        android:id="@+id/locationMapping"
        android:layout_below="@+id/startLocation"
        android:layout_toLeftOf="@+id/endLocation"
        android:layout_toRightOf="@+id/startLocation"
        android:layout_toEndOf="@+id/startLocation"
        android:clickable="false"
        android:onClick="startMapping" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/tpCost"
        android:textSize="45dp"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.49"
        android:hint="R0.00"
        android:textSize="33sp"/>
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">
    <Button
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Respond"
        android:id="@+id/respBtn" />

    <Button
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:id="@+id/decBtn"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
</LinearLayout>
